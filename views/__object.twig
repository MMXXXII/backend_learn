{% block navigation %}
<div class="container mt-2 mb-2" style="margin-right: 900px;"> <!-- Добавлен отрицательный отступ для смещения влево -->
    <div class="container mt-2 mb-2">
        <p class="description-text">{{ description }}</p>
    </div>
    <!-- Описание с отдельным классом для выравнивания -->
    <ul class="nav nav-pills">
        <li class="nav-item">
            {{ macros.btn("Картинки", url ~ '/os_list/' ~ id ~ '/image', false) }}
        </li>
        <li class="nav-item ms-2">
            {{ macros.btn("Описание", url ~ '/os_list/' ~ id ~ '/info', false) }}
        </li>
    </ul>
</div>
{% endblock %}

{% block content %}
<div class="container mt-2 mb-2" style="margin-right: 900px;"> <!-- Добавлен отрицательный отступ для смещения влево -->
